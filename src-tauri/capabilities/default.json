{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "opener:allow-open-url",
    "opener:allow-reveal-item-in-dir",
    {
      "identifier": "opener:allow-open-path",
      "allow": [
        {
          "path": "$HOME/**"
        },
        {
          "path": "$DESKTOP/**"
        },
        {
          "path": "$DOCUMENT/**"
        }
      ]
    },
    "opener:allow-default-urls",
    "store:default"
  ]
}